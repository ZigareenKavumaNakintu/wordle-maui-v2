<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordleGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordleGame"
    Shell.FlyoutBehavior="Disabled"
    Title="WordleGame">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate local:gamePage}"
        Route="gamePage" />

    <ShellContent
    Title="Savings"
    ContentTemplate="{DataTemplate local:SavingsPage}"
    Route="SavingsPage" />

    <ShellContent
     Title="Settings"
     ContentTemplate="{DataTemplate local:Settings}"
     Route="Settings" />


</Shell>
