<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordleGame.Settings"
             xmlns:viewmodel ="clr-namespace:WordleGame"
             x:DataType="viewmodel:GameViewModel"
             Title="Settings">
    <VerticalStackLayout>
        <!--Change the theme of the app -->
        <Label x:Name="ThemeChange" Text="Change the theme of the app ." TextColor="{DynamicResource TextColor}"/>
        <Switch x:Name="ThemeSwitch" Toggled="ThemSwitch_Toggled"/>

        <Button x:Name="BackButton" Text="Back to the game" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Clicked="BackButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>