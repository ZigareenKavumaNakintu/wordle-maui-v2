
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordleGame.Settings"
             xmlns:viewmodel ="clr-namespace:WordleGame"
             x:DataType="viewmodel:GameViewModel"
             Title="">
    <VerticalStackLayout x:Name="mainPage">
        <!--Change the theme of the app -->
        <Label x:Name="ThemeChange" Text="Change the theme of the app ." />
        <Switch x:Name="ThemeSwitch" IsToggled="{Binding IsDarkTheme}"/>
       
        <Button x:Name="BackButton" Text="Back to the game" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Clicked="BackButton_Clicked" TextColor="{DynamicResource LightTextColor}"/>
    </VerticalStackLayout>
</ContentPage>